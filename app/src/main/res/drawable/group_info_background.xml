<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#8A2BE2" /> <!-- Purple color -->

    <!-- Rounded Corners -->
    <corners android:radius="16dp" /> <!-- Adjust radius as needed -->

    <!-- Shadow Effect -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    <stroke
        android:width="1dp"
        android:color="#8A2BE2" /> <!-- Same color as background -->

</shape>
